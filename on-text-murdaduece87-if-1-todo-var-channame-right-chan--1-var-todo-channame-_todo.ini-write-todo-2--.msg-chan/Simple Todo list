;; ***Commands***
;; !todo "stuff" - writes "stuff" to text file for later review

on *:text:*:#: {
 if ($nick isop #) {
  if ( $1 == !todo ) {
      var %channame = $right($chan, -1)
      var %todo = %channame $+ _todo.ini
      write %todo $2- $+
      .msg $chan /me Item added to Todo list!
    }
  }
}
